{
	"name": "skywrapped",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev | pino-pretty --colorize",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "husky",
		"sync": "svelte-kit sync",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:only": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"db:start": "turso dev -f local.db -p 8083",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"db:drop": "drizzle-kit drop",
		"lint": "oxlint --type-aware",
		"format": "prettier --write --ignore-unknown",
		"qa:svelte": "pnpm run check",
		"qa:lint": "oxlint --type-aware",
		"qa": "pnpm run sync && pnpm run --stream \"/^qa:.*/\"",
		"local:db": "pnpm run db:start",
		"local:server": "pnpm run dev",
		"local": "pnpm run --stream \"/^local:.*/\"",
		"deploy": "netlify deploy --no-build --prod --site skywrapped",
		"lint-staged": "lint-staged"
	},
	"devDependencies": {
		"@atproto-labs/handle-resolver-node": "^0.1.22",
		"@atproto/api": "^0.18.3",
		"@atproto/oauth-client-node": "^0.3.11",
		"@ethercorps/sveltekit-og": "^4.2.0",
		"@fontsource/inter": "^5.2.8",
		"@libsql/client": "^0.15.15",
		"@lucide/svelte": "^0.555.0",
		"@prettier/plugin-oxc": "^0.0.5",
		"@sveltejs/adapter-netlify": "^5.2.4",
		"@sveltejs/kit": "^2.49.0",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/vite": "^4.1.14",
		"@types/node": "^24.10.1",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"drizzle-kit": "^0.31.5",
		"drizzle-orm": "^0.44.6",
		"html-to-image": "^1.11.13",
		"husky": "^9.1.7",
		"iron-session": "^8.0.4",
		"lint-staged": "^16.2.7",
		"netlify-cli": "^23.11.1",
		"oxfmt": "^0.15.0",
		"oxlint": "^1.30.0",
		"oxlint-tsgolint": "^0.8.2",
		"pino": "^10.1.0",
		"pino-pretty": "^13.1.2",
		"prettier": "3.6.2",
		"svelte": "^5.44.1",
		"svelte-check": "^4.3.3",
		"tailwind-merge": "^3.4.0",
		"tailwindcss": "^4.1.14",
		"typescript": "^5.9.3",
		"vite": "^7.2.4",
		"zod": "^3.25.76"
	}
}
